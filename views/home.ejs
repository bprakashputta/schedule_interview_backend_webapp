<!-- views/home.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Interview Scheduler</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <header>
      <h1>Interview Scheduler</h1>
    </header>
    <nav>
      <a href="/">Home</a>
      <a href="/create">Create Interview</a>
    </nav>
    <main>
      <% interviews.forEach(interview => { %>
      <div class="interview">
        <h2><%= interview.title %></h2>
        <p>
          <strong>Interviewers:</strong> <%=
          interview.interviewers.map(interviewer => interviewer.name).join(', ')
          %>
        </p>
        <p><strong>Candidate:</strong> <%= interview.candidate.name %></p>
        <p>
          <strong>Time:</strong> <%= interview.startTime %> - <%=
          interview.endTime %>
        </p>
        <p><strong>Location:</strong> <%= interview.location %></p>
        <p><strong>Description:</strong> <%= interview.description %></p>
      </div>
      <% }); %>
    </main>
  </body>
</html>
